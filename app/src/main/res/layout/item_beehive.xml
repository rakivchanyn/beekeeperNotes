<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:layout_margin="10dp">



        <ImageView
            android:id="@+id/imageBeeHive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_beehive_one"
            tools:ignore="VectorDrawableCompat" />

    <ProgressBar
        android:id="@+id/progressBarFood"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textNumberBeeColony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/yellow_round_shape"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:text="12"
            android:textAlignment="center"
            android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBarCheckedTime1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_margin="1dp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBarCheckedTime2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_margin="1dp"
            android:visibility="gone" />

    </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageEye"
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:cropToPadding="false"
            android:elevation="4dp"
            android:src="@drawable/ic_eye"
            app:civ_border_width="1dp" />


</RelativeLayout>